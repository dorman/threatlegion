<%= form_with(model: indicator, local: true, class: "space-y-6") do |form| %>
  <% if indicator.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(indicator.errors.count, "error") %> prohibited this indicator from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% indicator.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :indicator_type, "Type", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :indicator_type, 
      options_for_select([
        ["IP Address", "ip"],
        ["Domain", "domain"],
        ["URL", "url"],
        ["Hash", "hash"],
        ["Email", "email"],
        ["File Path", "file_path"],
        ["Registry Key", "registry_key"]
      ], indicator.indicator_type),
      { prompt: "Select indicator type" },
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
    %>
  </div>

  <div>
    <%= form.label :value, "Value", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :value, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm font-mono", placeholder: "e.g., 192.168.1.1, malicious.com, hash value" %>
  </div>

  <div>
    <%= form.label :threat_id, "Associated Threat (Optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :threat_id, @threats, :id, :name, 
      { prompt: "Select a threat (optional)" },
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
    %>
  </div>

  <div>
    <%= form.label :confidence, "Confidence Score (0-100)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :confidence, min: 0, max: 100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "85" %>
  </div>

  <div>
    <%= form.label :source, "Source", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :source, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "e.g., Internal Analysis, AbuseIPDB, VirusTotal" %>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :first_seen, "First Seen", class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :first_seen, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :last_seen, "Last Seen", class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :last_seen, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= form.label :tags, "Tags (comma-separated)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :tags, value: indicator.tags&.join(", "), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "malicious, phishing, c2" %>
    <p class="mt-2 text-sm text-gray-500">Separate multiple tags with commas</p>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", indicators_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
