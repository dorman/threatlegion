<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 font-mono"><%= @indicator.value %></h1>
      <p class="mt-2 text-sm text-gray-600">Indicator of Compromise</p>
    </div>
    <div class="flex space-x-3">
      <% if @indicator.indicator_type == 'ip' %>
        <%= link_to "Check AbuseIPDB", abuseipdb_check_path(ip_address: @indicator.value), class: "inline-flex items-center px-4 py-2 border border-purple-300 shadow-sm text-sm font-medium rounded-md text-purple-700 bg-purple-50 hover:bg-purple-100" %>
      <% end %>
      <%= link_to "Edit", edit_indicator_path(@indicator), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= button_to "Delete", @indicator, method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Indicator Details</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
              <%= @indicator.indicator_type&.upcase %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Value</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-mono break-all">
            <%= @indicator.value %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Confidence</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @indicator.confidence %>
              <div class="flex items-center">
                <span class="mr-4 font-semibold"><%= @indicator.confidence %>%</span>
                <div class="w-48 bg-gray-200 rounded-full h-3">
                  <div class="bg-blue-600 h-3 rounded-full" style="width: <%= @indicator.confidence %>%"></div>
                </div>
              </div>
            <% else %>
              N/A
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Source</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @indicator.source || "N/A" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Associated Threat</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @indicator.threat %>
              <%= link_to @indicator.threat.name, @indicator.threat, class: "text-purple-600 hover:text-purple-900 font-medium" %>
            <% else %>
              <span class="text-gray-400">Not associated with any threat</span>
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">First Seen</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @indicator.first_seen&.strftime("%B %d, %Y at %I:%M %p") || "N/A" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Last Seen</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @indicator.last_seen&.strftime("%B %d, %Y at %I:%M %p") || "N/A" %>
          </dd>
        </div>
        <% if @indicator.tags.present? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Tags</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <div class="flex flex-wrap gap-2">
                <% @indicator.tags.each do |tag| %>
                  <span class="px-2 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-800">
                    <%= tag %>
                  </span>
                <% end %>
              </div>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="flex justify-start">
    <%= link_to "â† Back to Indicators", indicators_path, class: "text-blue-600 hover:text-blue-900" %>
  </div>
</div>
