<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Workflow Results: <%= @workflow.name %></h1>
      <p class="mt-2 text-sm text-gray-600">Execution results and data output</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Back to Workflow", admin_workflow_path(@workflow), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "All Workflows", admin_workflows_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>

  <% if @execution %>
    <!-- Execution Info -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:px-6">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Execution Details</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Execution #<%= @execution.id %></p>
          </div>
          <div>
            <% case @execution.status %>
            <% when 'completed' %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800">Completed</span>
            <% when 'failed' %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800">Failed</span>
            <% when 'running' %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Running</span>
            <% else %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Pending</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Started</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @execution.started_at ? @execution.started_at.strftime("%B %d, %Y at %I:%M %p") : "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Duration</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @execution.duration ? "#{@execution.duration.round(2)} seconds" : "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Records Processed</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @execution.records_processed || 0 %></dd>
          </div>
        </dl>
        <% if @execution.error_message.present? %>
          <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-md">
            <p class="text-sm font-medium text-red-800">Error:</p>
            <p class="mt-1 text-sm text-red-700"><%= @execution.error_message %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Results Data -->
    <% if @execution.result_data && @execution.result_data['results'] %>
      <% @execution.result_data['results'].each_with_index do |result, index| %>
        <div class="bg-white shadow rounded-lg mb-6">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              Output: <%= result['label'] || "Result #{index + 1}" %>
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
              <%= result['data'].is_a?(Array) ? "#{result['data'].count} records" : "Data output" %>
            </p>
          </div>
          <div class="border-t border-gray-200">
            <% if result['data'].is_a?(Array) && result['data'].any? %>
              <!-- List View -->
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <% if result['data'].first.is_a?(Hash) %>
                        <% result['data'].first.keys.each do |key| %>
                          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <%= key.to_s.humanize %>
                          </th>
                        <% end %>
                      <% else %>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% result['data'].first(100).each do |row| %>
                      <tr class="hover:bg-gray-50">
                        <% if row.is_a?(Hash) %>
                          <% row.values.each do |value| %>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                              <%= value.is_a?(Hash) || value.is_a?(Array) ? value.to_json : value.to_s %>
                            </td>
                          <% end %>
                        <% else %>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= row %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <% if result['data'].count > 100 %>
                <div class="px-4 py-3 bg-gray-50 text-sm text-gray-500 text-center">
                  Showing first 100 of <%= result['data'].count %> records
                </div>
              <% end %>
            <% elsif result['data'].is_a?(String) %>
              <!-- CSV or Text Output -->
              <div class="px-4 py-5 sm:px-6">
                <pre class="bg-gray-50 p-4 rounded-md overflow-x-auto text-sm"><%= result['data'] %></pre>
              </div>
            <% else %>
              <div class="px-4 py-5 sm:px-6">
                <pre class="bg-gray-50 p-4 rounded-md overflow-x-auto text-sm"><%= JSON.pretty_generate(result['data']) %></pre>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white shadow rounded-lg p-6 text-center">
        <p class="text-gray-500">No results data available for this execution.</p>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <p class="text-gray-500">No execution selected. Choose an execution from the list below.</p>
    </div>
  <% end %>

  <!-- Execution History -->
  <div class="bg-white shadow rounded-lg mt-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Execution History</h3>
    </div>
    <div class="border-t border-gray-200">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Records</th>
            <th scope="col" class="relative px-6 py-3"><span class="sr-only">View</span></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @executions.each do |execution| %>
            <tr class="hover:bg-gray-50 <%= 'bg-blue-50' if @execution && execution.id == @execution.id %>">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= execution.id %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case execution.status %>
                <% when 'completed' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Completed</span>
                <% when 'failed' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Failed</span>
                <% when 'running' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Running</span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Pending</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= execution.started_at ? time_ago_in_words(execution.started_at) + " ago" : "N/A" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= execution.records_processed || 0 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", results_admin_workflow_path(@workflow, execution_id: execution.id), class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
