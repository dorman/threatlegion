<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Workflow Automation</h1>
      <p class="mt-2 text-sm text-gray-600">Create and manage automated workflows for threat intelligence</p>
    </div>
    <button 
      id="new-workflow-btn"
      class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-red-600 hover:bg-red-700 text-white shadow-lg hover:shadow-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
      aria-label="Create New Workflow">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
    </button>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nodes</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Execution</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
          <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @workflows.each do |workflow| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= workflow.name %></div>
              <% if workflow.description.present? %>
                <div class="text-sm text-gray-500"><%= truncate(workflow.description, length: 60) %></div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case workflow.status %>
              <% when 'active' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
              <% when 'draft' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Draft</span>
              <% when 'archived' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Archived</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= workflow.workflow_nodes.count %> nodes
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <% last_execution = workflow.workflow_executions.recent.first %>
              <% if last_execution %>
                <%= time_ago_in_words(last_execution.created_at) %> ago
                <% if last_execution.success? %>
                  <span class="text-green-600">✓</span>
                <% elsif last_execution.failed? %>
                  <span class="text-red-600">✗</span>
                <% end %>
              <% else %>
                <span class="text-gray-400">Never</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(workflow.created_at) %> ago
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex justify-end space-x-2">
                <%= link_to "Edit", admin_workflow_path(workflow), class: "text-red-600 hover:text-red-900" %>
                <%= link_to "Execute", execute_admin_workflow_path(workflow), method: :post, class: "text-green-600 hover:text-green-900" %>
                <%= link_to "Delete", admin_workflow_path(workflow), method: :delete, 
                    data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @workflows.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No workflows</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new workflow.</p>
      <div class="mt-6">
        <button 
          id="new-workflow-btn-empty"
          class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          New Workflow
        </button>
      </div>
    </div>
  <% end %>
</div>

<!-- New Workflow Dialog -->
<div id="new-workflow-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-medium text-gray-900">Create New Workflow</h3>
        <button id="close-modal-btn" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <%= form_with model: [:admin, Workflow.new], url: admin_workflows_path, local: true, id: "new-workflow-form" do |form| %>
        <div class="space-y-4">
          <div>
            <%= form.label :name, "Workflow Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "e.g., Threat Intelligence Pipeline" %>
          </div>

          <div>
            <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "Brief description of what this workflow does" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">API Keys (Optional)</label>
            <div class="space-y-2">
              <div>
                <label class="block text-xs text-gray-600">Abuse.ch API Key</label>
                <%= form.text_field :abuse_ch_api_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "Enter API key if needed" %>
              </div>
              <div>
                <label class="block text-xs text-gray-600">AbuseIPDB API Key</label>
                <%= form.text_field :abuseipdb_api_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "Enter API key if needed" %>
              </div>
            </div>
            <p class="mt-2 text-xs text-gray-500">API keys will be securely stored with the workflow configuration.</p>
          </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
          <button type="button" id="cancel-workflow-btn" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            Cancel
          </button>
          <%= form.submit "Create Workflow", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  (function() {
    function setupWorkflowModal() {
      const modal = document.getElementById('new-workflow-modal');
      const openBtn = document.getElementById('new-workflow-btn');
      const openBtnEmpty = document.getElementById('new-workflow-btn-empty');
      const closeBtn = document.getElementById('close-modal-btn');
      const cancelBtn = document.getElementById('cancel-workflow-btn');

      function openModal() {
        if (modal) modal.classList.remove('hidden');
      }

      function closeModal() {
        if (modal) modal.classList.add('hidden');
      }

      if (openBtn) openBtn.addEventListener('click', openModal);
      if (openBtnEmpty) openBtnEmpty.addEventListener('click', openModal);
      if (closeBtn) closeBtn.addEventListener('click', closeModal);
      if (cancelBtn) cancelBtn.addEventListener('click', closeModal);

      // Close on outside click
      if (modal) {
        modal.addEventListener('click', function(e) {
          if (e.target === modal) {
            closeModal();
          }
        });
      }
    }

    // Run on initial load and Turbo navigation
    document.addEventListener('DOMContentLoaded', setupWorkflowModal);
    document.addEventListener('turbo:load', setupWorkflowModal);
    document.addEventListener('turbo:render', setupWorkflowModal);
  })();
</script>
