<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">New Threat Feed</h1>
    <p class="mt-2 text-sm text-gray-600">Add a new external threat intelligence feed</p>
  </div>

  <%= form_with model: [:admin, @threat_feed], local: true do |form| %>
    <% if @threat_feed.errors.any? %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@threat_feed.errors.count, "error") %> prohibited this threat feed from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @threat_feed.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6 space-y-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "e.g., AbuseIPDB Blacklist" %>
        </div>

        <div>
          <%= form.label :url, "Feed URL", class: "block text-sm font-medium text-gray-700" %>
          <%= form.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "https://example.com/threat-feed.json" %>
          <p class="mt-1 text-sm text-gray-500">The URL where the threat feed data is located</p>
        </div>

        <div>
          <%= form.label :feed_type, "Feed Type", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :feed_type, 
              options_for_select([
                ['JSON', 'json'],
                ['CSV', 'csv'],
                ['XML', 'xml'],
                ['STIX', 'stix']
              ], @threat_feed.feed_type),
              { include_blank: "Select feed type..." },
              { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" } %>
          <p class="mt-1 text-sm text-gray-500">The format of the threat feed data</p>
        </div>

        <div class="grid grid-cols-2 gap-6">
          <div>
            <%= form.label :refresh_interval, "Refresh Interval (minutes)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :refresh_interval, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm", placeholder: "60", min: 1 %>
            <p class="mt-1 text-sm text-gray-500">How often to refresh this feed</p>
          </div>

          <div class="flex items-end">
            <div class="flex items-center">
              <%= form.check_box :enabled, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
              <%= form.label :enabled, "Enable this feed", class: "ml-2 block text-sm text-gray-900" %>
            </div>
          </div>
        </div>
      </div>

      <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
        <%= link_to "Cancel", admin_threat_feeds_path, class: "mr-3 inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= form.submit "Create Threat Feed", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
  <% end %>
</div>
