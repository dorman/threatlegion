<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @threat_feed.name %></h1>
      <p class="mt-2 text-sm text-gray-600">Threat feed details and management</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Back to Feeds", admin_threat_feeds_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "Edit", edit_admin_threat_feed_path(@threat_feed), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      <%= button_to "Fetch Now", fetch_admin_threat_feed_path(@threat_feed), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
    </div>
  </div>

  <!-- Feed Details -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Feed Information</h3>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @threat_feed.name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @threat_feed.enabled %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">ENABLED</span>
            <% else %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">DISABLED</span>
            <% end %>
          </dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">URL</dt>
          <dd class="mt-1 text-sm text-gray-900 break-all">
            <%= link_to @threat_feed.url, @threat_feed.url, target: "_blank", class: "text-red-600 hover:text-red-900" %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Feed Type</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
              <%= @threat_feed.feed_type&.upcase || "N/A" %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Refresh Interval</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @threat_feed.refresh_interval ? "#{@threat_feed.refresh_interval} minutes" : "Not set" %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Fetched</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @threat_feed.last_fetched ? time_ago_in_words(@threat_feed.last_fetched) + " ago" : "Never" %>
            <% if @threat_feed.last_fetched %>
              <span class="text-gray-500">(<%= @threat_feed.last_fetched.strftime("%B %d, %Y at %I:%M %p") %>)</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= time_ago_in_words(@threat_feed.created_at) %> ago
            <span class="text-gray-500">(<%= @threat_feed.created_at.strftime("%B %d, %Y") %>)</span>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Actions -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Actions</h3>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <div class="flex space-x-3">
        <%= button_to @threat_feed.enabled? ? "Disable Feed" : "Enable Feed", 
            toggle_admin_threat_feed_path(@threat_feed), method: :post,
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white #{@threat_feed.enabled? ? 'bg-yellow-600 hover:bg-yellow-700' : 'bg-green-600 hover:bg-green-700'}" %>
        <%= link_to "Delete Feed", admin_threat_feed_path(@threat_feed), method: :delete,
            data: { confirm: "Are you sure you want to delete this threat feed? This action cannot be undone." },
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
  </div>
</div>
