<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @threat.name %></h1>
      <p class="mt-2 text-sm text-gray-600">Created <%= time_ago_in_words(@threat.created_at) %> ago by <%= @threat.user.email %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_threat_path(@threat), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= button_to "Delete", @threat, method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Type</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
            <%= @threat.threat_type&.upcase || "N/A" %>
          </span>
        </dd>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Severity</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">
          <% case @threat.severity %>
          <% when "critical" %>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800">CRITICAL</span>
          <% when "high" %>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-orange-100 text-orange-800">HIGH</span>
          <% when "medium" %>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">MEDIUM</span>
          <% when "low" %>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800">LOW</span>
          <% else %>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">INFO</span>
          <% end %>
        </dd>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Status</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
            <%= @threat.status&.upcase || "N/A" %>
          </span>
        </dd>
      </div>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Threat Details</h3>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @threat.description || "No description provided" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Confidence Score</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @threat.confidence_score || "N/A" %>%</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">First Seen</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @threat.first_seen&.strftime("%B %d, %Y at %I:%M %p") || "N/A" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Seen</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @threat.last_seen&.strftime("%B %d, %Y at %I:%M %p") || "N/A" %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Indicators of Compromise</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= @indicators.total_count %> total indicators</p>
      </div>
      <%= link_to "Add Indicator", new_threat_indicator_path(@threat), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
    <div class="border-t border-gray-200">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Confidence</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @indicators.each do |indicator| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  <%= indicator.indicator_type&.upcase %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm font-mono text-gray-900"><%= indicator.value %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= indicator.confidence %>%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= indicator.source %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", indicator, class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="px-4 py-3 bg-gray-50 border-t border-gray-200">
      <%= paginate @indicators %>
    </div>
  </div>

  <% if @mitre_attacks.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
      <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">MITRE ATT&CK Techniques</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Mapped tactics and techniques</p>
        </div>
        <%= link_to "Add Technique", new_threat_mitre_attack_path(@threat), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700" %>
      </div>
      <div class="border-t border-gray-200">
        <ul class="divide-y divide-gray-200">
          <% @mitre_attacks.each do |mitre| %>
            <li class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center">
                    <span class="px-2 py-1 text-xs font-semibold rounded bg-purple-100 text-purple-800 mr-3">
                      <%= mitre.technique_id %>
                    </span>
                    <p class="text-sm font-medium text-gray-900"><%= mitre.technique %></p>
                  </div>
                  <p class="mt-1 text-sm text-gray-500"><strong>Tactic:</strong> <%= mitre.tactic %></p>
                  <% if mitre.description.present? %>
                    <p class="mt-1 text-sm text-gray-500"><%= mitre.description %></p>
                  <% end %>
                </div>
                <%= button_to "Remove", threat_mitre_attack_path(@threat, mitre), method: :delete, data: { confirm: "Are you sure?" }, class: "ml-4 text-purple-600 hover:text-purple-900 text-sm" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if @vulnerabilities.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Related Vulnerabilities</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">CVEs associated with this threat</p>
        </div>
        <%= link_to "Add Vulnerability", new_threat_vulnerability_path(@threat), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-orange-600 hover:bg-orange-700" %>
      </div>
      <div class="border-t border-gray-200">
        <ul class="divide-y divide-gray-200">
          <% @vulnerabilities.each do |vuln| %>
            <li class="px-6 py-4 hover:bg-gray-50">
              <%= link_to vuln, class: "block" do %>
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <div class="flex items-center">
                      <span class="px-2 py-1 text-xs font-semibold rounded bg-orange-100 text-orange-800 mr-3">
                        <%= vuln.cve_id %>
                      </span>
                      <span class="px-2 py-1 text-xs font-semibold rounded <%= vuln.severity_level == 'Critical' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                        CVSS <%= vuln.cvss_score %> - <%= vuln.severity_level %>
                      </span>
                    </div>
                    <p class="mt-2 text-sm text-gray-900"><%= vuln.description %></p>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
