<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @vulnerability.cve_id %></h1>
      <p class="mt-2 text-sm text-gray-600">
        <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= @vulnerability.severity_level == 'Critical' ? 'bg-red-100 text-red-800' : @vulnerability.severity_level == 'High' ? 'bg-orange-100 text-orange-800' : 'bg-yellow-100 text-yellow-800' %>">
          CVSS <%= @vulnerability.cvss_score %> - <%= @vulnerability.severity_level %>
        </span>
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_vulnerability_path(@vulnerability), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= button_to "Delete", @vulnerability, method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Vulnerability Details</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">CVE ID</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-mono">
            <%= @vulnerability.cve_id %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">CVSS Score</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <div class="flex items-center">
              <span class="text-2xl font-bold mr-4"><%= @vulnerability.cvss_score || "N/A" %></span>
              <% if @vulnerability.cvss_score %>
                <div class="w-48 bg-gray-200 rounded-full h-3">
                  <div class="h-3 rounded-full <%= @vulnerability.cvss_score >= 9.0 ? 'bg-purple-600' : @vulnerability.cvss_score >= 7.0 ? 'bg-orange-500' : 'bg-yellow-500' %>" style="width: <%= (@vulnerability.cvss_score / 10.0 * 100).round %>%"></div>
                </div>
              <% end %>
            </div>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Severity Level</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= @vulnerability.severity_level == 'Critical' ? 'bg-red-100 text-red-800' : @vulnerability.severity_level == 'High' ? 'bg-orange-100 text-orange-800' : @vulnerability.severity_level == 'Medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
              <%= @vulnerability.severity_level %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @vulnerability.description || "No description available" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Published Date</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @vulnerability.published_date&.strftime("%B %d, %Y") || "N/A" %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Affected Products</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @vulnerability.affected_products || "N/A" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Associated Threat</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @vulnerability.threat %>
              <%= link_to @vulnerability.threat.name, @vulnerability.threat, class: "text-purple-600 hover:text-purple-900 font-medium" %>
            <% else %>
              <span class="text-gray-400">Not associated with any threat</span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="flex justify-start">
    <%= link_to "â† Back to Vulnerabilities", vulnerabilities_path, class: "text-purple-600 hover:text-purple-900" %>
  </div>
</div>
